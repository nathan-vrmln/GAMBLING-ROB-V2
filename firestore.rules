rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règles pour la collection users
    match /users/{pseudo} {
      // Lecture : seulement utilisateurs authentifiés (pour leaderboard)
      allow read: if request.auth != null;
      
      // Création : l'utilisateur doit être authentifié et lier son UID
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.pseudo is string
                    && request.resource.data.email is string
                    && request.resource.data.robions is int
                    && request.resource.data.robions >= 0;
      
      // Mise à jour : seulement si l'utilisateur possède ce document
      // Le userId ne peut pas être modifié après création
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.robions is int
                    && request.resource.data.robions >= 0;
      
      // Suppression : interdite
      allow delete: if false;
    }
    
    // Bloquer tout accès non spécifié
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
